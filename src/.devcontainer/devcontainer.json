{
    "name": "ROS 2 Development Container",
    "privileged": true,
    "remoteUser": "ros",
    "containerUser": "ros",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "USERNAME": "ros"
        }
    },
    "workspaceFolder": "/home/ws",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/ws/src,type=bind",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-azuretools.vscode-docker",
                "ms-python.python",
                "ms-python.isort",
                "ms-python.black-formatter",
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-themes",
                "ms-vscode.cmake-tools",
                "twxs.cmake",
                "smilerobotics.urdf",
                "yzhang.markdown-all-in-one",
                "donjayamanne.python-extension-pack",
                "christian-kohler.path-intellisense",
                "ms-iot.vscode-ros"
            ],
            "[python]": {
                "editor.defaultFormatter": "ms-python.black-formatter",
                "editor.formatOnSave": true,
                "editor.codeActionsOnSave": {
                    "source.organizeImports": true
                },
                "isort.args": [
                    "--profile",
                    "black"
                ]
            }
        },
        "containerEnv": {
            "DISPLAY": "unix:0",
            "ROS_LOCALHOST_ONLY": "1",
            "ROS_DOMAIN_ID": "42"
        },
        "runArgs": [
            "--net=host",
            "-e",
            "DISPLAY=${env:DISPLAY}"
        ],
        "mounts": [
            "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
            "source=/dev/dri,target=/dev/dri,type=bind,consistency=cached",
            "source=${localWorkspaceFolder}/../cache/ROS_DISTRO/build,target=/home/ws/build,type=bind",
            "source=${localWorkspaceFolder}/../cache/ROS_DISTRO/install,target=/home/ws/install,type=bind",
            "source=${localWorkspaceFolder}/../cache/ROS_DISTRO/log,target=/home/ws/log,type=bind"
        ],
        "postCreateCommand": "sudo rosdep update && sudo rosdep install --from-paths src --ignore-src -y && sudo chown -R ros /home/ws/"
    }
}